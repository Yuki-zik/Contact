<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Contacts" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@android:color/system_accent1_200</item>
        <item name="colorPrimaryContainer">@android:color/system_accent1_800</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_900</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@android:color/system_accent2_200</item>
        <item name="colorSecondaryContainer">@android:color/system_accent2_800</item>
        <item name="colorOnSecondary">@android:color/system_neutral1_900</item>
        
        <!-- Status bar and Navigation bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@android:color/system_neutral1_900</item>
        <item name="colorSurfaceVariant">@android:color/system_neutral2_800</item>
        <item name="colorOnSurface">@android:color/system_neutral1_50</item>
    </style>
</resources> 
